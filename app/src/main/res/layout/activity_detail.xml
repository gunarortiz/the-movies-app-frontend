<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
    >


        <ImageView
                android:id="@+id/backgroundMovie2"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:src="@drawable/avenger"
                android:scaleType="centerCrop"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#95000000">

            <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_arrow_left"/>

            <TextView
                    android:id="@+id/titleN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hola como estas"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/worksansbold"
                android:textSize="27sp"
                android:textAlignment="center"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Action, Adventure, Fiction"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/worksansregular"
                    android:textSize="20sp"
                    android:textAlignment="center"
            />

        </LinearLayout>


    </RelativeLayout>

    <android.support.v7.widget.CardView
            android:layout_width="110dp"
            android:layout_height="190dp"
            app:cardCornerRadius="13dp"
            tools:showIn="@layout/activity_main"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-100dp"
            android:layout_marginLeft="15dp"
    >
        <ImageView
                android:id="@+id/backgroundMovie1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/avenger"
                android:scaleType="centerCrop"
        />

    </android.support.v7.widget.CardView>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:background="#F4F4F4"
            android:layout_marginTop="-100dp"
            android:paddingLeft="130dp"
            android:orientation="horizontal"
            android:weightSum="3"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_timer"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart_outline"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fav"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_variant"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
            />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overiew"
                android:textSize="25sp"
                android:fontFamily="@font/worksansbold"
                android:textColor="@android:color/black"

            />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The versatile star gives us a deeper look into the sets of 'Godzilla: King of the Monsters' and his long-running comedy."
                android:textSize="20sp"
                android:fontFamily="@font/worksansregular"

        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:textSize="18sp"
                android:fontFamily="@font/worksansbold"
                android:textColor="#8787F8"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cast"
                android:textSize="25sp"
                android:fontFamily="@font/worksansbold"
                android:textColor="@android:color/black"
        />






        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Recommendation"
                android:textSize="25sp"
                android:fontFamily="@font/worksansbold"
                android:textColor="@android:color/black"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp">

            <android.support.v7.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="13dp"
                    tools:showIn="@layout/activity_main"
                    android:layout_marginRight="15dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/t_ala"
                        android:scaleType="centerCrop"
                />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="13dp"
                    tools:showIn="@layout/activity_main"
                    android:layout_marginRight="15dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/t_hell"
                        android:scaleType="centerCrop"
                />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="13dp"
                    tools:showIn="@layout/activity_main"
                    android:layout_marginRight="15dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/t_bat"
                        android:scaleType="centerCrop"
                />

            </android.support.v7.widget.CardView>


        </LinearLayout>





        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Comments"
                android:textSize="25sp"
                android:fontFamily="@font/worksansbold"
                android:textColor="@android:color/black"
        />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:id="@+id/nombreN"
                android:hint="Nombre"
                android:background="@drawable/in_white"
                android:layout_marginTop="10dp"
        />
        <EditText
                android:layout_width="match_parent"
                android:id="@+id/contenidoN"
                android:hint="Comentario"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/in_white"
                android:layout_marginVertical="10dp"
        />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:onClick="enviar"
        />



        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp" />







    </LinearLayout>






</LinearLayout>

</ScrollView>